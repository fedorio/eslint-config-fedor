{
  "extends": ["standard", "standard-jsx"],
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "require": false
  },
  "rules": {
    "one-var": [ "off" ],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 1, "maxEOF": 1 }],
    "no-mixed-operators": ["error", {
      "groups": [
        ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
        ["in", "instanceof"]
      ],
      "allowSamePrecedence": true
    }]
  }
}
